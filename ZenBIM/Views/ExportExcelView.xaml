<Window x:Class="ZenBIM.Views.ExportExcelView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ZenBIM Excel Exporter" 
        Height="650" Width="480"
        WindowStartupLocation="CenterScreen" 
        Topmost="False"
        ResizeMode="NoResize" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ZenBIM;component/Resources/ZenStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="{StaticResource GlassBackground}" CornerRadius="28" Padding="24" MouseDown="OnWindowDrag">
        <Border.Effect>
            <StaticResource ResourceKey="ZenElevation"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,25">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock FontSize="28" Foreground="{StaticResource TextDark}">
                        <Run Text="Export" FontWeight="Light"/><Run Text="Schedules" FontWeight="Bold"/>
                    </TextBlock>
                    <TextBlock Text="ZenBIM Tools" FontSize="14" FontWeight="Bold" 
                               Foreground="{StaticResource ZenGradientDetails}" Margin="2,0,0,0"/>
                </StackPanel>

                <Button HorizontalAlignment="Right" VerticalAlignment="Top" Content="✕" Click="OnCloseClick"
                        Background="Transparent" BorderThickness="0" Foreground="#999999" FontSize="16" 
                        Cursor="Hand" Width="30" Height="30"/>
            </Grid>

            <StackPanel Grid.Row="1" Margin="0,0,0,15">
                <Border Background="#FFFFFF" CornerRadius="20" Height="40" Margin="0,0,0,10" BorderBrush="#E0E0E0" BorderThickness="1">
                    <Grid>
                        <TextBlock Text="🔍 Search schedule..." VerticalAlignment="Center" Margin="15,0,0,0" Foreground="#999999" IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBox x:Name="SearchBox" Background="Transparent" BorderThickness="0" 
                                 VerticalContentAlignment="Center" Margin="35,0,15,0" FontSize="13"
                                 TextChanged="OnSearchChanged"/>
                    </Grid>
                </Border>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox x:Name="CheckSelectAll" Grid.Column="1" Content="Select All" 
                              Click="OnSelectAllClick" VerticalAlignment="Center" Margin="0,0,5,0" Cursor="Hand"/>
                </Grid>
            </StackPanel>

            <Border Grid.Row="2" Background="#FFFFFF" CornerRadius="16" Margin="0,0,0,15" Padding="5">
                <ListBox x:Name="ScheduleListBox" BorderThickness="0" Background="Transparent" 
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="bd" CornerRadius="8" Background="Transparent" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="bd" Property="Background" Value="#F5F5F5"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center" Cursor="Hand"/>
                                <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding ViewName}" FontSize="13" Foreground="#333333" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding FilterLevel}" FontSize="11" Foreground="#888888"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>

            <StackPanel Grid.Row="3" Margin="0,0,0,20">
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Background="#FFFFFF" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1" Height="35">
                        <TextBlock x:Name="TxtPath" Text="Select export location..." VerticalAlignment="Center" Margin="10,0" Foreground="#777777" FontSize="12" TextTrimming="CharacterEllipsis"/>
                    </Border>
                    <Button Grid.Column="1" Content="Browse" Click="OnBrowseClick" Margin="8,0,0,0" Height="35" Width="70"
                            Background="#E0E0E0" BorderThickness="0" Foreground="#333333" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>

                <CheckBox x:Name="CheckOpenExcel" Content="Open file after export" IsChecked="True" 
                          Cursor="Hand" Foreground="#555555" VerticalAlignment="Center" Margin="2,0,0,0"/>
            </StackPanel>

            <Button Grid.Row="4" Click="OnExportClick" Height="50" Cursor="Hand" BorderThickness="0" Background="Transparent">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bdr" Background="{StaticResource ZenGradientDetails}" CornerRadius="25">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" Color="#00C853" Opacity="0.4" ShadowDepth="4" Direction="270"/>
                            </Border.Effect>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="EXPORT TO EXCEL" FontWeight="Bold" Foreground="White" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bdr" Property="Opacity" Value="0.8"/>
                                <Setter TargetName="bdr" Property="Effect" Value="{x:Null}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Border>
</Window>