<Window x:Class="ZenBIM.Views.ZenProgressView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="222" Width="460" WindowStartupLocation="CenterScreen" 
        Topmost="False" ResizeMode="NoResize" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ZenBIM;component/Resources/ZenStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="{StaticResource GlassBackground}" CornerRadius="28" Margin="15" BorderBrush="{StaticResource BorderLight}" BorderThickness="1">
        <Border.Effect>
            <StaticResource ResourceKey="ZenElevation"/>
        </Border.Effect>

        <Grid Margin="35,32,35,28">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,25">
                <Viewbox Width="48" Height="48" Margin="0,0,18,0">
                    <Path x:Name="IconPath" Fill="{StaticResource ZenPrimary}" 
                          Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11.03L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.97 19.05,5.05L16.56,6.05C16.04,5.66 15.47,5.34 14.86,5.08L14.47,2.44C14.43,2.21 14.23,2 14,2H10C9.77,2 9.57,2.21 9.53,2.44L9.14,5.08C8.53,5.34 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.97 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11.03C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.95C7.96,18.34 8.53,18.66 9.14,18.92L9.53,21.56C9.57,21.79 9.77,22 10,22H14C14.23,22 14.43,21.79 14.47,21.56L14.86,18.92C15.47,18.66 16.04,18.34 16.56,17.95L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z"/>
                </Viewbox>

                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="TxtStatus" Text="ZenBIM: Working..." FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextDark}"/>
                    <TextBlock x:Name="TxtSubStatus" Text="Processing data" FontSize="13" Foreground="{StaticResource TextGray}" FontWeight="Medium" Margin="0,2,0,0"/>
                </StackPanel>
            </StackPanel>

            <Grid Grid.Row="1" Height="14" VerticalAlignment="Top" Margin="0,10,0,0">
                <Border Background="#F5F5F5" CornerRadius="7"/>

                <ProgressBar x:Name="ProgBar" Minimum="0" Maximum="100" Value="0" 
                             BorderThickness="0" Background="Transparent"
                             Foreground="{StaticResource ZenGradientDetails}">
                    <ProgressBar.Clip>
                        <RectangleGeometry Rect="0,0,390,14" RadiusX="7" RadiusY="7"/>
                    </ProgressBar.Clip>
                </ProgressBar>
            </Grid>

            <TextBlock x:Name="TxtPercent" Grid.Row="2" Text="0%" 
                       FontSize="14" FontWeight="Bold" 
                       Foreground="{StaticResource ZenPrimary}" 
                       HorizontalAlignment="Right" Margin="0,15,0,0"/>
        </Grid>
    </Border>
</Window>