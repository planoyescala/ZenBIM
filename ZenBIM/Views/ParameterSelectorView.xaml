<Window x:Class="ZenBIM.Views.ParameterSelectorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Config Parameters | ZenBIM"
        Height="650" Width="800"
        WindowStartupLocation="CenterScreen" Topmost="False"
        ResizeMode="NoResize" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ZenBIM;component/Resources/ZenStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="{StaticResource GlassBackground}" CornerRadius="20" Margin="15" MouseDown="Window_MouseDown">
        <Border.Effect>
            <StaticResource ResourceKey="ZenElevation"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,25">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock FontSize="28" Foreground="{StaticResource TextDark}">
                        <Run Text="Config" FontWeight="Light"/><Run Text="Parameters" FontWeight="Bold"/>
                    </TextBlock>
                    <TextBlock Text="ZenBIM Naming Rule" FontSize="14" FontWeight="Bold" 
                               Foreground="{StaticResource ZenGradientDetails}" Margin="2,0,0,0"/>
                </StackPanel>

                <Button HorizontalAlignment="Right" VerticalAlignment="Top" Content="✕" Click="BtnClose_Click" 
                        Style="{StaticResource BtnGhost}" Foreground="#BDBDBD" FontSize="16" Width="30" Height="30"/>
            </Grid>

            <Grid Grid.Row="1" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <Border Style="{StaticResource InputContainer}">
                    <Grid>
                        <TextBlock Text="🔍 Search parameter..." VerticalAlignment="Center" Margin="15,0,0,0" Foreground="#BDBDBD" IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=TxtSearch}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBox x:Name="TxtSearch" TextChanged="OnSearchChanged" Margin="10,0"/>
                    </Grid>
                </Border>

                <ComboBox x:Name="ComboSource" Grid.Column="2" SelectionChanged="OnSourceChanged" SelectedIndex="0">
                    <ComboBoxItem Content="All"/>
                    <ComboBoxItem Content="Sheet Parameters"/>
                    <ComboBoxItem Content="Project Info Parameters"/>
                </ComboBox>
            </Grid>

            <Grid Grid.Row="2" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Available" FontSize="11" FontWeight="Bold" Foreground="{StaticResource TextGray}" Margin="0,0,0,5"/>

                    <Border Grid.Row="1" Background="#FFFFFF" CornerRadius="12" BorderBrush="{StaticResource BorderLight}" BorderThickness="1" Padding="5">
                        <ListBox x:Name="ListAvailable" BorderThickness="0" Background="Transparent" 
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="10,6"/>
                                    <Setter Property="Margin" Value="0,1"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border x:Name="bd" CornerRadius="6" Background="Transparent" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="bd" Property="Background" Value="#F5F5F5"/>
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="bd" Property="Background" Value="#F0FDF4"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </Border>
                </Grid>

                <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Button Content="➜" Click="OnAddClick" Style="{StaticResource BtnGhost}" FontSize="14" Width="35" Height="35" Margin="0,0,0,10" ToolTip="Add Parameter"/>
                    <Button Content="➜" Click="OnRemoveClick" Style="{StaticResource BtnGhost}" FontSize="14" Width="35" Height="35" ToolTip="Remove Parameter">
                        <Button.LayoutTransform>
                            <ScaleTransform ScaleX="-1"/>
                        </Button.LayoutTransform>
                    </Button>
                </StackPanel>

                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Selected Rule" FontSize="11" FontWeight="Bold" Foreground="{StaticResource ZenPrimary}" Margin="0,0,0,5"/>

                    <Border Grid.Row="1" Background="#FFFFFF" CornerRadius="12" BorderBrush="{StaticResource ZenPrimary}" BorderThickness="1" Padding="5">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" Color="#00C853" Opacity="0.1" ShadowDepth="0"/>
                        </Border.Effect>
                        <ListBox x:Name="ListSelected" BorderThickness="0" Background="Transparent" 
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="10,6"/>
                                    <Setter Property="Margin" Value="0,1"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border x:Name="bd" CornerRadius="6" Background="Transparent" Padding="{TemplateBinding Padding}">
                                                    <Grid>
                                                        <ContentPresenter VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="bd" Property="Background" Value="#F5F5F5"/>
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="bd" Property="Background" Value="#F0FDF4"/>
                                                        <Setter TargetName="bd" Property="BorderBrush" Value="{StaticResource ZenPrimary}"/>
                                                        <Setter TargetName="bd" Property="BorderThickness" Value="1"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </Border>
                </Grid>

                <StackPanel Grid.Column="3" VerticalAlignment="Center" Margin="5,0,0,0">
                    <Button Content="▲" Click="OnMoveUp" Style="{StaticResource BtnGhost}" FontSize="10" Width="30" Height="30" Margin="0,0,0,5" ToolTip="Move Up"/>
                    <Button Content="▼" Click="OnMoveDown" Style="{StaticResource BtnGhost}" FontSize="10" Width="30" Height="30" ToolTip="Move Down"/>
                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,20">
                <TextBlock Text="Separator character:" VerticalAlignment="Center" Foreground="{StaticResource TextDark}" Margin="0,0,10,0"/>
                <Border Style="{StaticResource InputContainer}" Width="80">
                    <TextBox x:Name="TxtSeparator" Text="-" TextAlignment="Center" FontWeight="Bold"/>
                </Border>
                <TextBlock Text="(e.g.  -  or  _  or  . )" VerticalAlignment="Center" Foreground="{StaticResource TextGray}" FontSize="11" Margin="10,0,0,0"/>
            </StackPanel>

            <Button Grid.Row="4" 
                    Content="APPLY NAMING RULE" Click="OnApplyClick" Style="{StaticResource BtnPrimary}" Height="45"/>

        </Grid>
    </Border>
</Window>