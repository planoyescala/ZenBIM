<Window x:Class="ZenBIM.Views.ColorSplasherView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ZenBIM Color Splasher" 
        Height="750" Width="1000"
        WindowStartupLocation="CenterScreen" 
        Topmost="False"
        ResizeMode="NoResize" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ZenBIM;component/Resources/ZenStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DropShadowEffect x:Key="ZenElevationLow" BlurRadius="15" ShadowDepth="4" Direction="270" Color="#000000" Opacity="0.08"/>
            <DropShadowEffect x:Key="ZenElevationHigh" BlurRadius="30" ShadowDepth="10" Direction="270" Color="#000000" Opacity="0.15"/>

            <Style x:Key="ModernSearchBox" TargetType="TextBox">
                <Setter Property="Height" Value="40"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Padding" Value="15,0"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Background" Value="#F5F7F6"/>
                <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="20">
                                <ScrollViewer x:Name="PART_ContentHost"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FFFFFF"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource ZenPrimary}"/>
                                    <Setter TargetName="border" Property="BorderThickness" Value="1"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="ZenListItem" TargetType="ListBoxItem">
                <Setter Property="Margin" Value="0,2"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ListBoxItem">
                            <Border x:Name="bd" CornerRadius="10" Background="Transparent" Padding="12,8" Cursor="Hand">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter/>
                                    <Border x:Name="Indicator" Grid.Column="1" Width="8" Height="8" CornerRadius="4" Background="{StaticResource ZenGradientDetails}" Visibility="Collapsed"/>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter TargetName="bd" Property="Background" Value="#F0FDF4"/>
                                    <Setter TargetName="Indicator" Property="Visibility" Value="Visible"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="{StaticResource ZenPrimary}"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bd" Property="Background" Value="#FAFAFA"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="{StaticResource GlassBackground}" CornerRadius="20" Margin="10" MouseDown="Window_MouseDown">
        <Border.Effect>
            <DropShadowEffect BlurRadius="40" Color="Black" Opacity="0.2" ShadowDepth="10"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#FFFFFF" CornerRadius="20,0,0,20" Padding="30">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,0,0,25">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Color" FontSize="26" FontWeight="Light" Foreground="{StaticResource TextDark}"/>
                            <TextBlock Text="Splasher" FontSize="26" FontWeight="Bold" Foreground="{StaticResource TextDark}"/>
                        </StackPanel>
                        <TextBlock Text="ZenBIM Tools" FontSize="12" Foreground="{StaticResource ZenGradientDetails}" FontWeight="Bold"/>
                    </StackPanel>

                    <Grid Grid.Row="1" Margin="0,0,0,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="1. Category" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextGray}" Margin="5,0,0,10"/>

                        <Grid Grid.Row="1" Margin="0,0,0,10">
                            <TextBox x:Name="TxtSearchCat" Style="{StaticResource ModernSearchBox}" TextChanged="OnCategorySearchChanged"/>
                            <TextBlock Text="Search category..." IsHitTestVisible="False" Foreground="{StaticResource TextGray}" VerticalAlignment="Center" Margin="18,0,0,0"
                                      Visibility="{Binding ElementName=TxtSearchCat, Path=Text.IsEmpty, Converter={StaticResource BoolToVis}}"/>
                        </Grid>

                        <ListBox x:Name="ListCategories" Grid.Row="2" 
                                 BorderThickness="0" Background="Transparent" 
                                 ItemContainerStyle="{StaticResource ZenListItem}" 
                                 SelectionChanged="OnCategoryChanged" 
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                    </Grid>

                    <Rectangle Grid.Row="2" Height="1" Fill="#F0F0F0" Margin="10,5"/>

                    <Grid Grid.Row="3" Margin="0,15,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="2. Parameter" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextGray}" Margin="5,0,0,10"/>

                        <Grid Grid.Row="1" Margin="0,0,0,10">
                            <TextBox x:Name="TxtSearchParam" Style="{StaticResource ModernSearchBox}" TextChanged="OnParameterSearchChanged"/>
                            <TextBlock Text="Search parameter..." IsHitTestVisible="False" Foreground="{StaticResource TextGray}" VerticalAlignment="Center" Margin="18,0,0,0"
                                      Visibility="{Binding ElementName=TxtSearchParam, Path=Text.IsEmpty, Converter={StaticResource BoolToVis}}"/>
                        </Grid>

                        <ListBox x:Name="ListParameters" Grid.Row="2" 
                                 BorderThickness="0" Background="Transparent" 
                                 ItemContainerStyle="{StaticResource ZenListItem}" 
                                 SelectionChanged="OnParameterChanged" 
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                    </Grid>
                </Grid>
            </Border>

            <Grid Grid.Column="1" Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <StackPanel>
                        <TextBlock Text="Preview &amp; Apply" FontSize="20" FontWeight="SemiBold" Foreground="{StaticResource TextDark}"/>
                        <TextBlock x:Name="TxtStatus" Text="Select a category to start" FontSize="14" Foreground="{StaticResource TextGray}" Margin="0,5,0,0"/>
                    </StackPanel>

                    <Button HorizontalAlignment="Right" VerticalAlignment="Top" Click="BtnClose_Click"
                            Width="30" Height="30" Cursor="Hand" Background="Transparent" BorderThickness="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="bdr" Background="#F5F5F5" CornerRadius="15">
                                    <TextBlock Text="✕" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#999999" FontSize="12"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="bdr" Property="Background" Value="#FFEBEE"/>
                                        <Setter Property="Foreground" Value="#D32F2F"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <Border Grid.Row="1" Margin="0,25" Background="White" CornerRadius="16" Effect="{StaticResource ZenElevationLow}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="20,15">
                            <TextBlock Text="Found Values" VerticalAlignment="Center" FontWeight="Bold" Foreground="{StaticResource TextGray}" FontSize="12"/>
                            <Button Content="Shuffle Colors" HorizontalAlignment="Right" Click="OnShuffleClick" Style="{StaticResource BtnGhost}"/>
                        </Grid>

                        <ListBox x:Name="ListValues" Grid.Row="1" BorderThickness="0" Background="Transparent" Margin="10,0,10,10" ScrollViewer.HorizontalScrollBarVisibility="Hidden">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border x:Name="bd" CornerRadius="12" Background="White" Margin="0,0,0,8" Padding="10" BorderBrush="#F0F0F0" BorderThickness="1">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="bd" Property="BorderBrush" Value="{StaticResource ZenPrimary}"/>
                                                        <Setter TargetName="bd" Property="Background" Value="#F9F9F9"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Width="32" Height="32" CornerRadius="16" Background="{Binding ColorBrush}" Margin="0,0,15,0">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.2" Color="Black"/>
                                            </Border.Effect>
                                        </Border>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding ValueName}" FontSize="14" Foreground="{StaticResource TextDark}" TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>

                                        <Border Grid.Column="2" Background="#F5F5F5" CornerRadius="8" Padding="10,4">
                                            <TextBlock Text="{Binding Count, StringFormat='{}Count: {0}'}" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource TextGray}"/>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Column="0">
                        <Button Content="Reset" Click="OnResetClick" Style="{StaticResource BtnDestructive}" Width="80"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button Content="Views..." Click="OpenViewSelector" Style="{StaticResource BtnSecondary}" Width="90" Margin="0,0,10,0"/>

                        <Button Content="Create Legend" Click="OnCreateLegendClick" Style="{StaticResource BtnPrimary}" Width="130" Height="45" Margin="0,0,10,0"/>
                        <Button Content="Apply Colors" Click="OnApplyCurrentClick" Style="{StaticResource BtnPrimary}" Width="130" Height="45"/>
                    </StackPanel>
                </Grid>
            </Grid>

            <Grid x:Name="OverlayViewSelector" Visibility="Collapsed" Grid.ColumnSpan="2">
                <Border Background="#F2F2F2" Opacity="0.9"/>
                <Border Background="White" CornerRadius="24" Width="450" Height="550" Effect="{StaticResource ZenElevationHigh}">
                    <Grid Margin="30">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,0,0,20">
                            <TextBlock Text="Select Views" FontSize="22" FontWeight="Bold" Foreground="{StaticResource TextDark}"/>
                            <Button Content="✕" HorizontalAlignment="Right" Click="CloseOverlay" Style="{StaticResource BtnGhost}" Width="30" Height="30"/>
                        </Grid>

                        <TextBox x:Name="TxtSearchView" Grid.Row="1" Style="{StaticResource ModernSearchBox}" Margin="0,0,0,15" TextChanged="OnViewSearchChanged"/>

                        <Border Grid.Row="2" BorderBrush="#F0F0F0" BorderThickness="1" CornerRadius="12" Padding="5">
                            <ListBox x:Name="ListViews" BorderThickness="0" Background="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,6">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center" Margin="5,0,15,0">
                                                <CheckBox.LayoutTransform>
                                                    <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                                </CheckBox.LayoutTransform>
                                            </CheckBox>
                                            <TextBlock Grid.Column="1" Text="{Binding Name}" VerticalAlignment="Center" FontSize="14" Foreground="{StaticResource TextDark}"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Border>

                        <Button Grid.Row="3" Content="Apply Selection" Click="ApplySelectedViews" Style="{StaticResource BtnPrimary}" Margin="0,20,0,0" Height="50"/>
                    </Grid>
                </Border>
            </Grid>

            <Grid x:Name="OverlaySuccess" Visibility="Collapsed" Grid.ColumnSpan="2">
                <Border Background="#F2F2F2" Opacity="0.9"/>
                <Border Background="White" CornerRadius="24" Width="380" Height="300" Effect="{StaticResource ZenElevationHigh}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Border Width="80" Height="80" CornerRadius="40" Background="{StaticResource ZenGradientDetails}" Margin="0,0,0,25">
                            <TextBlock Text="✓" FontSize="40" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Done!" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextDark}" HorizontalAlignment="Center"/>
                        <TextBlock Text="View graphics have been updated." FontSize="14" Foreground="{StaticResource TextGray}" Margin="0,8,0,30" HorizontalAlignment="Center"/>
                        <Button Content="Great" Click="CloseOverlay" Style="{StaticResource BtnPrimary}" Width="150" Height="45"/>
                    </StackPanel>
                </Border>
            </Grid>

        </Grid>
    </Border>
</Window>