<Window x:Class="ZenBIM.Views.AboutView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About | ZenBIM"
        Height="450" Width="600"
        WindowStartupLocation="CenterScreen" 
        Topmost="False"
        ResizeMode="NoResize" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ZenBIM;component/Resources/ZenStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="{StaticResource GlassBackground}" CornerRadius="20" Margin="15" MouseDown="Window_MouseDown">
        <Border.Effect>
            <StaticResource ResourceKey="ZenElevation"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,20">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock FontSize="24" Foreground="{StaticResource TextDark}">
                        <Run Text="About" FontWeight="Light"/><Run Text=" ZenBIM" FontWeight="Bold"/>
                    </TextBlock>
                    <TextBlock Text="by plano y escala" FontSize="12" FontWeight="SemiBold" 
                               Foreground="{StaticResource ZenGradientDetails}" Margin="2,0,0,0"/>
                </StackPanel>

                <Button HorizontalAlignment="Right" VerticalAlignment="Top" Content="✕" Click="BtnClose_Click" 
                        Style="{StaticResource BtnGhost}" Foreground="#BDBDBD" FontSize="16" Width="30" Height="30"/>
            </Grid>

            <StackPanel Grid.Row="1" VerticalAlignment="Top">
                <TextBlock Text="Welcome to ZenBIM" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextDark}" Margin="0,0,0,10"/>

                <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextGray}" FontSize="13" LineHeight="20" Margin="0,0,0,15">
                    This project is <Bold>Open Source software</Bold>, licensed under the <Bold>GNU General Public License v3 (GPL v3)</Bold>.
                    You are free to use, modify, and redistribute it following these terms.
                </TextBlock>

                <Separator Background="{StaticResource BorderLight}" Margin="0,0,0,15"/>

                <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextGray}" FontSize="13" LineHeight="20">
                    Any ideas, suggestions, or issues are more than welcome.
                    <LineBreak/>
                    Please visit our issues page to contribute or report bugs:
                </TextBlock>

                <TextBlock Margin="0,10,0,0">
                    <Hyperlink NavigateUri="https://github.com/planoyescala/ZenBIM/issues" RequestNavigate="Hyperlink_RequestNavigate"
                               Foreground="{StaticResource ZenPrimary}" TextDecorations="None" FontWeight="Bold">
                        github.com/planoyescala/ZenBIM/issues
                    </Hyperlink>
                </TextBlock>
            </StackPanel>

            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Button Content="Thank you for supporting free software!" Click="BtnClose_Click" 
                        Style="{StaticResource BtnPrimary}" HorizontalAlignment="Stretch" Height="40"/>
            </Grid>
        </Grid>
    </Border>
</Window>