<Window x:Class="ZenBIM.Views.BatchPrintView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Batch Print | ZenBIM"
        Height="850" Width="1100"
        WindowStartupLocation="CenterScreen" Topmost="False"
        ResizeMode="NoResize" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ZenBIM;component/Resources/ZenStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="{StaticResource GlassBackground}" CornerRadius="20" Margin="15" MouseDown="Window_MouseDown">
        <Border.Effect>
            <StaticResource ResourceKey="ZenElevation"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,25">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock FontSize="28" Foreground="{StaticResource TextDark}">
                        <Run Text="Batch" FontWeight="Light"/><Run Text="Print" FontWeight="Bold"/>
                    </TextBlock>
                    <TextBlock Text="ZenBIM Tools" FontSize="14" FontWeight="Bold" 
                               Foreground="{StaticResource ZenGradientDetails}" Margin="2,0,0,0"/>
                </StackPanel>

                <Button HorizontalAlignment="Right" VerticalAlignment="Top" Content="✕" Click="BtnClose_Click" 
                        Style="{StaticResource BtnGhost}" Foreground="#BDBDBD" FontSize="16" Width="30" Height="30"/>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="380"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="1. Select Sheets" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextDark}" Margin="0,0,0,10"/>

                    <Grid Grid.Row="1" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="1.5*"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox x:Name="ComboFilter" Grid.Column="0" SelectionChanged="OnFilterChanged" DisplayMemberPath="Name"/>
                        <Border Style="{StaticResource InputContainer}" Grid.Column="2">
                            <Grid>
                                <TextBlock Text="🔍 Search sheet..." VerticalAlignment="Center" Margin="15,0,0,0" Foreground="#BDBDBD" IsHitTestVisible="False">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=TxtSearch}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBox x:Name="TxtSearch" TextChanged="OnSearchChanged" Margin="10,0"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <Border Grid.Row="2" Background="#FFFFFF" CornerRadius="12" BorderBrush="{StaticResource BorderLight}" BorderThickness="1" Padding="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="10,0,20,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="1.5*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="1" Text="No." FontWeight="Bold" Foreground="{StaticResource TextGray}" VerticalAlignment="Center" FontSize="11"/>
                                <TextBlock Grid.Column="2" Text="Name" FontWeight="Bold" Foreground="{StaticResource TextGray}" VerticalAlignment="Center" FontSize="11"/>
                                <TextBlock Grid.Column="3" Text="Export Preview" FontWeight="Bold" Foreground="{StaticResource ZenPrimary}" VerticalAlignment="Center" FontSize="11"/>
                            </Grid>
                            <Separator VerticalAlignment="Bottom" Background="#F0F0F0"/>

                            <ListBox x:Name="ListSheets" Grid.Row="1" BorderThickness="0" Background="Transparent" 
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Padding" Value="10,6"/>
                                        <Setter Property="Margin" Value="0,1"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <Border x:Name="bd" CornerRadius="6" Background="Transparent" Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="bd" Property="Background" Value="#F5F5F5"/>
                                                        </Trigger>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="bd" Property="Background" Value="#F0FDF4"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="2*"/>
                                            </Grid.ColumnDefinitions>

                                            <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center"/>

                                            <TextBlock Grid.Column="1" Text="{Binding SheetNumber}" FontSize="12" Foreground="{StaticResource TextDark}" FontWeight="SemiBold" VerticalAlignment="Center"/>

                                            <TextBlock Grid.Column="2" Text="{Binding SheetName}" FontSize="12" Foreground="{StaticResource TextDark}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" Margin="0,0,5,0"/>

                                            <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                                <TextBlock Text="➝ " Foreground="{StaticResource TextGray}" FontSize="10"/>
                                                <TextBlock Text="{Binding PreviewName}" FontSize="11" Foreground="{StaticResource ZenPrimary}" FontStyle="Italic" TextTrimming="CharacterEllipsis" ToolTip="{Binding PreviewName}"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Border>

                    <Grid Grid.Row="3" Margin="0,10,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Select All" Click="OnSelectAll" Style="{StaticResource BtnGhost}" Foreground="{StaticResource ZenPrimary}" Margin="0,0,10,0"/>
                            <Button Content="None" Click="OnSelectNone" Style="{StaticResource BtnGhost}" Foreground="#EF5350"/>
                        </StackPanel>
                        <TextBlock x:Name="TxtCount" Text="0 sheets selected" VerticalAlignment="Center" Foreground="{StaticResource TextGray}" FontSize="12"/>
                    </Grid>
                </Grid>

                <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="0,0,5,0">
                    <StackPanel>

                        <Border Background="#FFFFFF" CornerRadius="12" Padding="20" Margin="0,0,0,20" BorderBrush="{StaticResource BorderLight}" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="2. Naming Rule" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextDark}" Margin="0,0,0,15"/>
                                <Border Style="{StaticResource InputContainer}" Margin="0,0,0,10">
                                    <TextBox x:Name="TxtNamingRule" Margin="10,0" LostFocus="OnRuleLostFocus"/>
                                </Border>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="0" Content="⚙ Config Parameters" Click="OnAddParameterClick" 
                                            Height="35" Style="{StaticResource BtnGhost}" Background="#F5F5F5" Foreground="{StaticResource TextDark}"/>
                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                        <Button Content="💾" Click="OnSaveRuleClick" Width="35" Height="35" Style="{StaticResource BtnGhost}" ToolTip="Save Preset"/>
                                        <Button Content="📂" Click="OnLoadRuleClick" Width="35" Height="35" Style="{StaticResource BtnGhost}" ToolTip="Load Preset"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Border Background="#FFFFFF" CornerRadius="12" Padding="20" Margin="0,0,0,20" BorderBrush="{StaticResource BorderLight}" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="3. Output Folder" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextDark}" Margin="0,0,0,15"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Style="{StaticResource InputContainer}">
                                        <TextBox x:Name="TxtFolderPath" IsReadOnly="True" Text="Select path..." Foreground="#BDBDBD" Margin="10,0"/>
                                    </Border>
                                    <Button Grid.Column="1" Click="OnBrowseFolder" Width="40" Height="40" Margin="10,0,0,0" Style="{StaticResource BtnGhost}" Background="#F5F5F5">
                                        <TextBlock Text="📂" FontSize="16"/>
                                    </Button>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Border Background="#FFFFFF" CornerRadius="12" Padding="20" BorderBrush="{StaticResource BorderLight}" BorderThickness="1" Margin="0,0,0,5">
                            <StackPanel>
                                <TextBlock Text="4. Export Options" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextDark}" Margin="0,0,0,15"/>

                                <TextBlock Text="Format" FontSize="11" Foreground="{StaticResource TextGray}" Margin="0,0,0,5"/>
                                <ComboBox x:Name="ComboFormat" SelectionChanged="OnFormatChanged" Margin="0,0,0,15">
                                    <ComboBoxItem Content="PDF Only" IsSelected="True"/>
                                    <ComboBoxItem Content="DWG Only"/>
                                    <ComboBoxItem Content="PDF &amp; DWG"/>
                                </ComboBox>

                                <StackPanel x:Name="PanelPDF">
                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="15"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="Color" FontSize="11" Foreground="{StaticResource TextGray}" Margin="0,0,0,5"/>
                                            <ComboBox x:Name="ComboColors">
                                                <ComboBoxItem Content="Color" IsSelected="True"/>
                                                <ComboBoxItem Content="Grayscale"/>
                                                <ComboBoxItem Content="Black/White"/>
                                            </ComboBox>
                                        </StackPanel>
                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Quality" FontSize="11" Foreground="{StaticResource TextGray}" Margin="0,0,0,5"/>
                                            <ComboBox x:Name="ComboQuality">
                                                <ComboBoxItem Content="Low"/>
                                                <ComboBoxItem Content="High" IsSelected="True"/>
                                                <ComboBoxItem Content="Presentation"/>
                                            </ComboBox>
                                        </StackPanel>
                                    </Grid>
                                    <CheckBox x:Name="CheckMerge" Content="Combine into single PDF" Margin="0,5"/>
                                </StackPanel>

                                <StackPanel x:Name="PanelDWG" Visibility="Collapsed" Margin="0,15,0,0">
                                    <TextBlock Text="DWG Export Setup" FontSize="11" Foreground="{StaticResource TextGray}" Margin="0,0,0,5"/>
                                    <ComboBox x:Name="ComboDWGSetup" DisplayMemberPath="Name" Height="40" Margin="0,0,0,5"/>
                                </StackPanel>

                                <Separator Background="{StaticResource BorderLight}" Margin="0,15,0,10"/>
                                <CheckBox x:Name="CheckLinks" Content="Hide Ref/Scope Boxes" IsChecked="True" Margin="0,5"/>
                                <CheckBox x:Name="CheckOpen" Content="Open folder when done" IsChecked="True" Margin="0,5"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Button Content="START BATCH PRINT" Click="OnExportClick" Style="{StaticResource BtnPrimary}" 
                        HorizontalAlignment="Stretch" Height="40"/>
            </Grid>

        </Grid>
    </Border>
</Window>