<Window x:Class="ZenBIM.Views.FilterLegendView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ZenBIM Create Legend" 
        Height="780" Width="520"
        WindowStartupLocation="CenterScreen" Topmost="False"
        ResizeMode="NoResize" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ZenBIM;component/Resources/ZenStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="{StaticResource GlassBackground}" CornerRadius="20" Margin="15" MouseDown="Window_MouseDown">
        <Border.Effect>
            <StaticResource ResourceKey="ZenElevation"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,25">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock FontSize="28" Foreground="{StaticResource TextDark}">
                        <Run Text="Create" FontWeight="Light"/><Run Text="Legend" FontWeight="Bold"/>
                    </TextBlock>
                    <TextBlock Text="ZenBIM Filter Generator" FontSize="14" FontWeight="Bold" 
                               Foreground="{StaticResource ZenGradientDetails}" Margin="2,0,0,0"/>
                </StackPanel>

                <Button HorizontalAlignment="Right" VerticalAlignment="Top" Content="✕" Click="BtnClose_Click" 
                        Style="{StaticResource BtnGhost}" Foreground="#BDBDBD" FontSize="16" Width="30" Height="30"/>
            </Grid>

            <StackPanel Grid.Row="1" Margin="0,0,0,15">
                <Border Style="{StaticResource InputContainer}" Margin="0,0,0,10">
                    <Grid>
                        <TextBlock Text="🔍 Search view..." VerticalAlignment="Center" Margin="15,0,0,0" Foreground="#BDBDBD" IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBox x:Name="SearchBox" Margin="10,0" TextChanged="OnSearchChanged"/>
                    </Grid>
                </Border>

                <StackPanel Orientation="Horizontal" Margin="5,0,0,0">
                    <CheckBox x:Name="CheckViews" Content="Show Views" IsChecked="True" Click="OnFilterChanged" Margin="0,0,20,0" VerticalAlignment="Center"/>
                    <CheckBox x:Name="CheckTemplates" Content="Show Templates" IsChecked="False" Click="OnFilterChanged" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>

            <Border Grid.Row="2" Background="#FFFFFF" CornerRadius="12" Margin="0,0,0,20" BorderBrush="{StaticResource BorderLight}" BorderThickness="1" Padding="5">
                <ListBox x:Name="FilterListBox" BorderThickness="0" Background="Transparent" 
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="Margin" Value="0,2"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="bd" CornerRadius="8" Background="Transparent" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="bd" Property="Background" Value="#F5F5F5"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="bd" Property="Background" Value="#F0FDF4"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding Name}" FontSize="13" Foreground="{StaticResource TextDark}" VerticalAlignment="Center"/>
                                <Border x:Name="Indicator" Grid.Column="1" Width="6" Height="6" CornerRadius="3" Background="{StaticResource ZenPrimary}" Visibility="Collapsed"/>
                            </Grid>
                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}" Value="True">
                                    <Setter TargetName="Indicator" Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>

            <StackPanel Grid.Row="3" Margin="0,0,0,25">
                <TextBlock Text="Graphic Settings" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextDark}" Margin="0,0,0,15"/>

                <TextBlock Text="Text Style" FontSize="11" Foreground="{StaticResource TextGray}" Margin="0,0,0,5"/>
                <ComboBox x:Name="ComboTextTypes" Margin="0,0,0,15"/>

                <TextBlock Text="Dimensions (cm)" FontSize="11" Foreground="{StaticResource TextGray}" Margin="0,0,0,5"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource InputContainer}">
                        <Grid>
                            <TextBlock Text="W" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="{StaticResource TextGray}" FontSize="11"/>
                            <TextBox x:Name="TxtRegionWidth" Text="150" TextAlignment="Center" Margin="25,0,5,0" ToolTip="Region Width"/>
                        </Grid>
                    </Border>

                    <Border Grid.Column="2" Style="{StaticResource InputContainer}">
                        <Grid>
                            <TextBlock Text="H" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="{StaticResource TextGray}" FontSize="11"/>
                            <TextBox x:Name="TxtRegionHeight" Text="75" TextAlignment="Center" Margin="25,0,5,0" ToolTip="Region Height"/>
                        </Grid>
                    </Border>

                    <Border Grid.Column="4" Style="{StaticResource InputContainer}">
                        <Grid>
                            <TextBlock Text="L" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="{StaticResource TextGray}" FontSize="11"/>
                            <TextBox x:Name="TxtLineWidth" Text="150" TextAlignment="Center" Margin="25,0,5,0" ToolTip="Divider Line Length"/>
                        </Grid>
                    </Border>
                </Grid>
            </StackPanel>

            <Button Grid.Row="4" 
                    Content="GENERATE LEGEND" Click="OnCreateClick" Style="{StaticResource BtnPrimary}" Height="45"/>

        </Grid>
    </Border>
</Window>